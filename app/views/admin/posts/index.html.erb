<div class = "container">
  <div class = "row">
    <h3>レビュー一覧</h3>
    <div class = "col-md-6 mx-auto">
      <% @posts.each do |post| %>
      <div class = "card mb-2">
      投稿者:<%= post.user.nickname %><br />
        内容 :<%= post.comment %><br />
        評価 :<%= post.star %>点
        <div id="star-rate<%= post.id %>"></div>
        <script>
          $('#star-rate<%= post.id %>').raty({
            size      : 36,
            starOff   : '<%= asset_path('star-off.png') %>',
            starOn    : '<%= asset_path('star-on.png') %>',
            half      : false,
            readOnly: true,
            score: <%= post.star %>,
          });
        </script>
        投稿日 :<%= post.created_at.strftime('%Y/%m/%d') %><br />
             <%= link_to "削除", admin_post_path(post), method: :delete %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class = "container">
<h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "ニックネーム" %><br>
    <%= f.text_field :nickname %>
  </div>

  <%= f.radio_button :sex, Child.sexes.key(0), class: "ml-5" %>
  <%= f.label :sex, Child.sexes_i18n[:boy], class: "h5" %><br />

  <%= f.radio_button :sex, Child.sexes.key(1), class: "ml-5" %>
  <%= f.label :sex, Child.sexes_i18n[:girl], class: "h5" %><br />

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
</div
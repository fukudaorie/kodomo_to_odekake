<%= form_with model: [spot, post], url: public_spot_posts_path(spot), local: true do |f| %>
  <div class="field">
  <div>
    <%= f.label "コメント"%>
    <%= f.text_field :comment %>
  </div>


    <div class="form-group row" id="star">
    <%= f.label :star,'評価 ', class:'col-md-3 col-form-label' %>
    <%= f.hidden_field :star, id: :post_star %>
    <% f.hidden_field :spot_id %>
  </div>
  <script>
  $('#star').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',

    scoreName: 'post[star]',
    half: false,
  });
  </script>

  <div>
    <%= f.submit "保存" %>
  </div>

  <%= link_to "他のレビューを見る", public_spot_posts_path(spot) %>
<% end %>
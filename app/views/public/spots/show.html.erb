<div class = "container">
  <h3><%= @spot.name %></h3>
  <div class = "row">
    <div class = "col">
      <% if @spot.image.attached? %>
        <%= image_tag @spot.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
      <% end %>
    </div>
    <div class = "col">
      <% @spot.tags.each do |tag| %>
        <span><%= tag.name %></span><br />
      <% end %>
      <%= @spot.address %>
    </div>
  </div>
</div>
<%= render 'public/spots/form', post: @post, spot: @spot %>
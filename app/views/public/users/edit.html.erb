<div class = "container">
  <h3>会員情報編集</h3>
  <%= form_with model: @user, url: public_user_path do |f| %>
  <div class="form-group row">
    <%= f.label "ニックネーム", class: "col-md-2" %>
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: 'form-control col-md-2 mr-5' %>
  </div>

  <div class="form-group row">
    <%= f.label "メールアドレス", class: "col-md-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-controlcol-md-2' %><br/>
  </div>
  <div class = "row">
    <%= f.submit "編集内容を保存", class: "col-md-2 btn btn-success" %>
    <div class = "col-md-3"></div>
    <%= link_to "退会する", withdraw_public_users_path, method: :patch, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger col-md-1" %>
  </div>
  </div>
  <% end %>
</div>

  <h3>会員情報編集</h3>
  <% @user.children.build %>
  <%= form_with model: @user, url: public_user_path(@user), method: :patch do |s| %>
  <div class="form-group row">
    <%= s.label "ニックネーム", class: "col-md-2" %>
    <%= s.text_field :nickname, autofocus: true, autocomplete: "nickname", class: 'form-control col-md-2 mr-5' %>
  </div>

  <div class="users">

    <%= s.fields_for :children do |t| %>
      <%= render partial: "public/registrations/child_fields", locals: { f: t } %>
    <% end %>
    <div class="links">
      <%= link_to_add_association "子供を追加", s, :children %>
    </div>

  </div>


  <div class="form-group row">
    <%= s.label "メールアドレス", class: "col-md-2" %>
      <%= s.email_field :email, autofocus: true, autocomplete: "email", class: 'form-controlcol-md-2' %><br/>
  </div>
  <div class = "row">
    <%= s.submit "編集内容を保存", class: "col-md-2 btn btn-success" %>
    <div class = "col-md-3"></div>
    <%= link_to "退会する", withdraw_public_users_path, method: :patch, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger col-md-1" %>
  </div>
  </div>
  <% end %>

<div class = "container">
    <h3 class = "mb-3">いいね一覧</h3>
    <div class = "text-center">
      <% if current_user == User.guest %>
        会員登録してね
      <% end %>
    </div>
    <div class = "row">
      <div class = "col-md-6 mx-auto">
    <% @favorite_spots.each do |spot| %>
      <%= link_to public_spot_path(spot) do %>
      <div class=card>
      <%= spot.name %><br />
      <div class = "row">
        <div class = "col-2">
      <% if spot.image.attached? %>
        <%= image_tag spot.image, size: "70x70" %>
      <% else %>
        <%= image_tag 'no_image', size: "70x70" %>
      <% end %>
      <% end %>
      </div>
      <div class = "col">
      <%= spot.address %>
      </div>
      </div>
      <div id ="average-star-rating<%= spot.id %>"></div>
        <%= spot.avg_star %>点（<%= spot.posts.count %>件のレビュー）
        <script>
          $('#average-star-rating<%= spot.id %>').empty();
          $('#average-star-rating<%= spot.id %>').raty({
            starOn: "<%= asset_path('star-on.png') %>",
            starOff: "<%= asset_path('star-off.png') %>",
            starHalf: "<%= asset_path('star-half.png') %>",
            readOnly: true,
            score: <%= spot.avg_star %>
          });
        </script>

      </div>
      </div>
      <% end %>

</div>
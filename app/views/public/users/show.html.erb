<div class = "container">
  <div class = "row">
    <div class = "col">ニックネーム</div>
    <div class = "col"><%= @user.nickname %></div>
  </div>
  <div class = "row">
    <div class = "col">メールアドレス</div>
    <div class = "col"><%= @user.email %></div>
  </div>
  <% @user.children.each do |child| %>
    <div class = "row">
      <div class = "col">性別</div>
      <div class = "col"><%= child.sex_i18n %></div><br />
    </div>
    <div class = "row">
      <div class = "col">年齢</div>
      <div class = "col"><%= child.age %>歳</div><br />
    </div>
  <% end %>

  <%= link_to "編集", edit_public_user_path(current_user) %>
  <%= link_to "投稿する", new_public_spot_path %>
</div>